        <section class="formulario">
            <h2 class="h21">Reserva ahora</h2>
            <form id="formulario-reserva">
                <label>Nombre:</label>
                <input type="text" id="nombre" name="nombre">
                <span id="error-nombre" class="error"></span>
                <br><br>
                <label>Correo:</label>
                <input type="email" id="correo" name="correo">
                <span id="error-correo" class="error"></span>
                <br><br>
                <label>Número de teléfono:</label>
                <input type="tel" id="telefono" name="telefono">
                <span id="error-telefono" class="error"></span>
                <br><br>
                <label>Mensaje:</label>
                <textarea id="mensaje" name="mensaje"></textarea>
                <span id="error-mensaje" class="error"></span>
                <br><br>
                <button id="enviar">Enviar</button>
            </form>
            <div id="respuesta"></div>
        </section>
